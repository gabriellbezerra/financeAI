generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id       String @id @default(uuid())
  name     String
  password String
}

model Transaction {
  id            String                   @id @default(uuid())
  name          String
  type          String
  amount        Decimal
  category      String
  paymentMethod String
  date          DateTime
  createdAt     DateTime                 @default(now())
  updatedAt     DateTime                 @updatedAt
  userId        String
}